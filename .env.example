# ===========================================
# Network Configuration
# ===========================================

# Sepolia Testnet RPC URL
# Get from: https://www.alchemy.com/ or https://infura.io/
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key-here

# Deployer Private Key (WITHOUT 0x prefix)
# ⚠️  NEVER commit this file with real private key
PRIVATE_KEY=your-private-key-here-without-0x-prefix

# ===========================================
# Contract Verification
# ===========================================

# Etherscan API Key for Contract Verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your-etherscan-api-key-here

# ===========================================
# Gas Reporting & Optimization
# ===========================================

# Enable gas reporting in tests
REPORT_GAS=false

# Gas report output file
REPORT_GAS_FILE=gas-report.txt

# CoinMarketCap API for USD gas prices
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key-here

# Solidity Optimizer Runs
# Higher = better for runtime, Lower = better for deployment
# Default: 200, Production: 1000+
OPTIMIZER_RUNS=200

# Enable contract size reporting
CONTRACT_SIZER=false

# ===========================================
# Security & Access Control
# ===========================================

# Pauser Role Address (for emergency pause)
# Leave empty to use deployer address
PAUSER_ADDRESS=

# Emergency Contact Address
EMERGENCY_CONTACT=

# Timelock Delay (in seconds)
# Recommended: 172800 (48 hours) for mainnet
TIMELOCK_DELAY=172800

# Multi-sig Threshold
MULTISIG_THRESHOLD=2

# Multi-sig Signers (comma-separated addresses)
MULTISIG_SIGNERS=

# ===========================================
# Contract Configuration
# ===========================================

# Default Royalty Rate (in basis points, 1000 = 10%)
DEFAULT_ROYALTY_RATE=1000

# Minimum License Fee (in wei, 18 decimals)
# 1 ETH = 1000000000000000000
MIN_LICENSE_FEE=1000000000000000000

# Default Exclusivity Period (in days)
DEFAULT_EXCLUSIVITY_PERIOD=180

# Default Patent Validity (in years)
DEFAULT_VALIDITY_YEARS=10

# Maximum Patents Per Owner
MAX_PATENTS_PER_OWNER=100

# Maximum Licenses Per Patent
MAX_LICENSES_PER_PATENT=1000

# ===========================================
# Feature Flags
# ===========================================

# Enable confidential bidding feature
ENABLE_CONFIDENTIAL_BIDDING=true

# Enable automatic royalty verification
ENABLE_AUTO_ROYALTY_VERIFICATION=true

# Enable license auto-renewal
ENABLE_LICENSE_AUTO_RENEWAL=true

# Enable multi-territory support
ENABLE_MULTI_TERRITORY=true

# ===========================================
# Rate Limiting & DoS Protection
# ===========================================

# Maximum gas per transaction
MAX_GAS_PER_TX=5000000

# Minimum time between actions (seconds)
MIN_ACTION_INTERVAL=60

# Maximum bids per address per patent
MAX_BIDS_PER_ADDRESS=10

# Maximum license requests per day
MAX_LICENSE_REQUESTS_PER_DAY=50

# ===========================================
# Testing & Development
# ===========================================

# Enable debug mode (logs additional information)
DEBUG=false

# Test network gas price (in gwei)
TEST_GAS_PRICE=50

# Enable verbose logging
VERBOSE=false

# Skip confirmations for development
SKIP_CONFIRMATIONS=false

# ===========================================
# Monitoring & Analytics
# ===========================================

# Enable monitoring
ENABLE_MONITORING=false

# Sentry DSN for error tracking
SENTRY_DSN=

# Analytics API Key
ANALYTICS_API_KEY=

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# ===========================================
# Frontend Integration
# ===========================================

# Frontend URL
FRONTEND_URL=http://localhost:3000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# API Rate Limit (requests per minute)
API_RATE_LIMIT=60

# ===========================================
# IPFS Configuration (for Patent Storage)
# ===========================================

# IPFS Gateway URL
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Pinata API Key (for IPFS pinning)
PINATA_API_KEY=

# Pinata Secret Key
PINATA_SECRET_KEY=

# ===========================================
# Email Notifications (Optional)
# ===========================================

# Email service provider
EMAIL_PROVIDER=

# Email API Key
EMAIL_API_KEY=

# From Email Address
FROM_EMAIL=

# Admin Email Address
ADMIN_EMAIL=

# ===========================================
# Database (Optional - for off-chain data)
# ===========================================

# Database URL
DATABASE_URL=

# Redis URL (for caching)
REDIS_URL=

# ===========================================
# Security Best Practices
# ===========================================
# 1. NEVER commit .env file to version control
# 2. Use different keys for testnet and mainnet
# 3. Rotate keys regularly
# 4. Use hardware wallets for mainnet deployments
# 5. Enable 2FA on all service accounts
# 6. Keep this file secure and backed up
# 7. Use environment-specific configurations
# 8. Review access logs regularly
# 9. Implement key management policies
# 10. Use secrets management service for production
