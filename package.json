{
  "name": "confidential-patent-license-platform",
  "version": "1.0.0",
  "description": "Confidential Patent Licensing Platform using Zama FHE on Ethereum Sepolia - Security Hardened",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "compile:optimized": "OPTIMIZER_RUNS=1000 hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:sepolia": "hardhat test --network sepolia",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "verify": "hardhat run scripts/verify.js --network sepolia",
    "interact": "hardhat run scripts/interact.js --network sepolia",
    "simulate": "hardhat run scripts/simulate.js --network sepolia",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "typechain": "hardhat typechain",
    "lint": "npm run lint:sol && npm run lint:js && npm run prettier:check",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:sol:security": "solhint 'contracts/**/*.sol' --config .solhint-security.json",
    "lint:js": "eslint '**/*.js' --ignore-pattern node_modules/ --ignore-pattern artifacts/ --ignore-pattern cache/",
    "lint:fix": "npm run lint:sol -- --fix && npm run lint:js -- --fix && npm run prettier:write",
    "prettier:check": "prettier --check '**/*.{js,json,md,sol}'",
    "prettier:write": "prettier --write '**/*.{js,json,md,sol}'",
    "format": "npm run prettier:write",
    "security": "npm run security:audit && npm run security:slither",
    "security:audit": "npm audit --audit-level=moderate",
    "security:slither": "echo 'Run: slither . --config-file slither.config.json'",
    "security:mythril": "echo 'Run: myth analyze contracts/*.sol'",
    "gas:report": "REPORT_GAS=true npm test",
    "gas:analyze": "hardhat test --bail",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "validate": "npm run lint && npm run test && npm run security:audit"
  },
  "lint-staged": {
    "*.sol": [
      "solhint --fix",
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "fhe",
    "zama",
    "patent",
    "license",
    "blockchain",
    "ethereum",
    "confidential",
    "royalty",
    "security-hardened",
    "gas-optimized"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^2.1.0",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.3.0",
    "solhint": "^4.1.0",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0"
  }
}
